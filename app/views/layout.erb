<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Open Source &amp; Feelings</title>
    <link href="/css/bootstrap-theme.min.css" rel="stylesheet">
    <link href="/css/override.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Lato:300,600,900' rel='stylesheet' type='text/css'>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
  </head>

  <body>
    <div id="wrapper">
      <!-- Sidebar -->
      <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
          <li class="sidebar-brand"><a href="/">Home</a></li>
          <li><a href="/conduct">Code of Conduct</a></li>
          <li><a href="http://cfp.osfeels.com">Call for Proposals</a></li>
          <li><a href="/prospectus">Sponsorship</a></li>
        </ul>
      </div>

      <!-- Main Content -->
      <div id="page-content-wrapper">
        <div class="jumbotron">
          <div class="spinner-master">
            <input type="checkbox" id="spinner-form" />
            <label for="spinner-form" class="spinner-spin" id="menu-toggle">
              <div class="spinner diagonal part-1"></div>
              <div class="spinner horizontal"></div>
              <div class="spinner diagonal part-2"></div>
            </label>
          </div>
          <div class="container">
            <h1>
              <a href="/">
                <img src="img/logo_with_white_text_transparent_bg.png" alt="Open Source and Feelings" />
              </a>
            </h1>
            <div class="row tagline">
              <div class="col-md-8 col-md-offset-2">
                <h2>A two-day conference at the intersection of software and the humanities.</h2>
              </div>
            </div>
            <div class="visible-sm visible-xs">
              <div class="row newsletter">
                <div class="col-md-8 col-md-offset-2">
                  <%= erb :mailing_list %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="container main">
          <%= yield %>
          <%= erb :footer %>
        </div>
      </div>
    </div>

    <!-- Placed at the end of the document so the pages load faster -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>

    <!-- Menu Toggle Script -->
    <script>
      // Fix hamburger display for back button
      var spinner = $("#spinner-form");

      if (spinner.is(":checked")) {
        spinner.prop("checked", false);
      }

      // Toggle mennu
      $("#menu-toggle").click(function(e) {
        $("#wrapper").toggleClass("toggled");
      });
    </script>
  </body>
</html>
