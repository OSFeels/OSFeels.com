<%# Day 1 Speakers %>
<div class="row callouts">
  <img class="confetti" src="img/smile_confetti.png">
  <h1 class="pink">
    Presenting at OS&F
  </h1>
</div>

<% 
  color_classes = %w(blue pink purple)
  color_index = 0
  row_index = 0
%>

<% PRESENTERS.each do |peep| %>
  <% if row_index % 2 == 0 %><div class="row speakers"><% end %>
    <div class="col-md-6 text-center speakers--info">
      <img src="img/presenters/<%= peep.fetch :headshot %>" alt="<%= peep.fetch :name %>" class="speakers--img"/>
      <h2 class="speakers--name <%= color_classes[color_index] %>"><%= peep.fetch :name %></h2>
      <p class="speakers--bio"><%= peep.fetch :bio %></p>
      <h3 class="speakers--title <%= color_classes[color_index] %>"><%= peep.fetch :title%></h3>
      <p class="speakers--abstract"><%= peep.fetch :abstract %></p>
    </div>
    <% color_index += (color_index == 2 ? -2 : 1) %>
    <% row_index += 1 %>
  <% if row_index % 2 == 0 %></div><% end %>
<% end %>

